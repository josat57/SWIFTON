<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <shape android:shape="rectangle">
        <corners android:radius="1000dp" />
        <!--<solid android:color="#ba4541" />-->
        <gradient
            android:angle="135"
            android:centerColor="@color/colorAccent"
            android:endColor="@color/colorPrimaryDark"
            android:startColor="@color/colorPrimary"
            android:type="linear" />
        <stroke
            android:width="4dip"
            android:color="#fff" />
        <padding
            android:bottom="4dp"
            android:left="4dp"
            android:right="4dp"
            android:top="4dp" />
    </shape>
</item>
<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <corners android:radius="1000dp" />
        <!--<solid android:color="#ba4541" />-->
        <gradient
            android:angle="135"
            android:centerColor="@color/colorAccent"
            android:endColor="@color/colorPrimaryDark"
            android:startColor="@color/colorPrimary"
            android:type="linear" />
        <stroke
            android:width="4dip"
            android:color="#fff" />
        <padding
            android:bottom="4dp"
            android:left="4dp"
            android:right="4dp"
            android:top="4dp" />
    </shape>
</item>
</selector>